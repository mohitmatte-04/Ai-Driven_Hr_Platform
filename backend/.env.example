# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Gemini Configuration (Choose one)
# Option 1: Google AI Studio (simpler for development)
GOOGLE_GENAI_USE_VERTEXAI=0
GOOGLE_API_KEY=your-gemini-api-key-here

# Option 2: Vertex AI (production)
# GOOGLE_GENAI_USE_VERTEXAI=1

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/firebase-service-account.json

# Email Configuration (Choose ONE option)

# Option 1: SendGrid (Recommended for production)
# SENDGRID_API_KEY=your-sendgrid-api-key-here

# Option 2: SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Email Sender Details (Required for both options)
FROM_EMAIL=recruitment@yourcompany.com
FROM_NAME=Your Company Recruitment

# Application Settings
SHORTLIST_THRESHOLD=70.0
AUTO_EMAIL_ENABLED=true
